        {
          "name": "StellaPiano",
          "pos": "daoplayer.selectSections('StellaVox',currentSection,sceneTime,window.estimatedEnd-totalTime,totalTime)",
          "volume": 1
        },
        {
          "name": "StellaKeys",
          "pos": "daoplayer.selectSections('StellaVox',currentSection,sceneTime,window.estimatedEnd-totalTime,totalTime)",
          "volume": "[sceneTime,trackVolume,sceneTime+1,(routes['R2'].distanceAlong>0 ? 1 : 0)]"
        },
        {
          "name": "StellaRhythm",
